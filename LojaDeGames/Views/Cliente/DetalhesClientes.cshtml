@model LojaDeGames.Models.Cliente
@{
    ViewBag.Title = "DetalhesClientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr><th><h1 style="text-align:center">Informações</h1></th></tr>
    </thead>
    <tbody>
        <tr><th><h3>Nome: @Model.Nome</h3></th></tr>

        <tr><th><h3>Nome: @Model.Cpf</h3></th></tr>

        <tr><th><h3>Nome: @Model.Endereco</h3></th></tr>


    </tbody>

</table>

@if (Request.UrlReferrer != null)
{
    <button style="background-color:black" class="bottomNav" onclick="history.go(-1); return false;" href="#">Voltar</button><br />
}
