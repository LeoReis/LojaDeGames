@model LojaDeGames.Models.ClienteIndexViewModel
@{
    ViewBag.Title = "FormCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Cliente"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Nome)
        @Html.TextBoxFor(m => m.Cliente.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Cpf)
        @Html.TextBoxFor(m => m.Cliente.Cpf, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Endereco)
        @Html.TextBoxFor(m => m.Cliente.Endereco, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>

}

