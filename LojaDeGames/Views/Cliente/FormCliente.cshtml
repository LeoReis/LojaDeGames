@model LojaDeGames.Models.ClienteIndexViewModel
@{
    ViewBag.Title = "Formulario Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Cliente"))
{
        @Html.AntiForgeryToken();
        @Html.HiddenFor(m => m.Cliente.Id);

    <div class="form-group" style="display: none">
        @Html.LabelFor(m => m.Cliente.Id)
        @Html.TextBoxFor(m => m.Cliente.Id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Nome)
        @Html.TextBoxFor(m => m.Cliente.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cliente.Nome)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Cpf)
        @Html.TextBoxFor(m => m.Cliente.Cpf, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cliente.Cpf)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Endereco)
        @Html.TextBoxFor(m => m.Cliente.Endereco, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cliente.Endereco)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



