@model LojaDeGames.Models.JogoIndexViewModel
@{
    ViewBag.Title = "Formulario de Jogos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Games"))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.Jogo.Id);

    <div class="form-group" style="display: none">
        @Html.LabelFor(m => m.Jogo.Id)
        @Html.TextBoxFor(m => m.Jogo.Id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Jogo.Nome)
        @Html.TextBoxFor(m => m.Jogo.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Jogo.Nome)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Jogo.Genero)
        @Html.TextBoxFor(m => m.Jogo.Genero, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Jogo.Genero)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Jogo.FaixaEtaria)
        @Html.TextBoxFor(m => m.Jogo.FaixaEtaria, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Jogo.FaixaEtaria)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Jogo.Desenvolvedora)
        @Html.TextBoxFor(m => m.Jogo.Desenvolvedora, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Jogo.Desenvolvedora)
    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



